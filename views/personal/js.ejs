<script>

    $(".toggles").hide();
    $(".showToggle").show();

    /* 遊戲積分toggle */
    $("#game-score").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#game-score-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 小遊戲toggle */
    $("#game").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#game-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 發問紀錄toggle */
    $("#ask-record").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#ask-record-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 我要發問toggle */
    $("#ask").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#ask-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    $(".ask").click(function(q) {
        $.ajax({
            type: "POST",
            url: "/qna/getQuestion",
            dataType: 'json',
            timeout: 3000,
            data: {
                postID: $(this).attr("id")
            },
            success: function(data) {
                $(".modal-title").text(data[0].title);
                $("#qContent").text(data[0].qContent);
                $("#aContent").text(data[0].aContent);
                $("#showRecord").css("display", "block");
            },
            error: function(err) {
                return next(err);
            }
        });
    });

    $("#closebtn").on("click", function() {
        $("#showRecord").hide();
    })

</script>