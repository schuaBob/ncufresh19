<script>
    var Users = require("../models/index/user");

    document.getElementById("#username").innerHTML = '<%= user.name %>';
    document.getElementById("#student-number").innerHTML = '<%= user.id %>';
    document.getElementById("#sum-point").innerHTML = '<%= user.score_sum %>';

    $(".toggles").hide();
    $(".showToggle").show();

    /* 遊戲積分toggle */
    $("#game-score").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#game-score-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 小遊戲toggle */
    $("#game").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#game-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 發問紀錄toggle */
    $("#ask-record").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#ask-record-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

    /* 我要發問toggle */
    $("#ask").click(function() {
        $(".showToggle").hide().removeClass("showToggle");
        $("#ask-toggle").addClass("showToggle");
        $(".showToggle").show();
    });

</script>