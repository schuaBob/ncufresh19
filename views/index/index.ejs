<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <% include ../layouts/head %>
  <% include ../layouts/script %>
  <link rel="stylesheet" href="index/style.css">
  <link rel="stylesheet" href="/css/fullpage.css">
  <script type="text/javascript" src="/js/scrolloverflow.js"></script>
  <script type="text/javascript" src="/js/fullpage.js"></script>
</head>

<body>
  <modal>
    <div class="modal fade" id="newsModal" tabindex="-1" role="dialog" aria-labelledby="newsModalTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ScheduleNewsTitle">
              <div class="row align-items-center">
                <div class="col-3 cateIcon">

                </div>
                <div class="col-9 cateTitle">

                </div>
              </div>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  </modal>
  <% include ../layouts/header%>

  <main>
    <div id="fullpage">
      <div class="section" id="indexPage1">
        <img id="indexLogo" src="/layouts/logo.png">
        <div id="toPage2">
          <a href="#newsPage">
            <svg id="triangle" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="caret-down"
              class="svg-inline--fa fa-caret-down fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 320 512">
              <path fill="#fff9dc"
                d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
            </svg>
            <svg height="100" width="100">
              <circle cx="50" cy="50" r="40" fill="#ec6d4f" />
            </svg>
          </a>
        </div>
        <img src="index/首頁1.png" class="indexPage">
      </div>

      <div class="section" id="indexPage2">
        <div class="container-fluid" id="secondSection">
          <div class="row align-items-center justify-content-center">
            <div class="col-lg">
              <div id="news">
                <div id="news-title">
                  <div class="card text-center">
                    <div class="card-body">
                      <h2 class="card-title">
                        News
                      </h2>
                    </div>
                  </div>
                </div>
                <div id="news-body">
                  <% for(let i in News){ %>
                  <div class="card" data-toggle="modal" data-target="#newsModal" pk="<%= News[i]['pk']%>">
                    <div class="row align-items-center">
                      <div class="col-sm-3">
                        <img src="index/icon-<%= icon[News[i]['category']-1]%>.png" class="card-img">
                      </div>
                      <div class="col-sm-9">
                        <div class="card-body">
                          <h5><%= News[i]['title']%></h5>
                          <span class="newsTime"><small><%= News[i]['screenTime']%></small></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="col-lg">
              <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <%for (let i in commercial){%>
                  <%if(i==0){%>
                  <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>" class="active"></li>
                  <%}else{%>
                  <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>"></li>
                  <%}%>
                  <% } %>
                </ol>
                <div class="carousel-inner">
                  <%for (let i in commercial){%>
                  <% if(i==0){%>
                  <div class="carousel-item active">
                    <img src="<%= commercial[i]['picPath']%>" class="d-block w-100">
                  </div>
                  <%}else{%>
                  <div class="carousel-item">
                    <img src="<%= commercial[i]['picPath']%>" class="d-block w-100">
                  </div>
                  <%}%>
                  <% } %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true">
                    <div>
                      <svg id="prebtn" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="caret-down"
                        class="svg-inline--fa fa-caret-down fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 320 512">
                        <path fill="#fff9dc"
                          d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
                      </svg>
                      <svg height="40" width="40">
                        <circle cx="20" cy="20" r="20" fill="#ec6d4f" />
                      </svg>
                    </div>
                  </span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true">
                    <div>
                      <svg id="nextbtn" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="caret-down"
                        class="svg-inline--fa fa-caret-down fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 320 512">
                        <path fill="#fff9dc"
                          d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
                      </svg>
                      <svg height="40" width="40">
                        <circle cx="20" cy="20" r="20" fill="#ec6d4f" />
                      </svg>
                    </div>
                  </span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="section" id="indexPage3">
        <div id="indexPage3-frame">
          <div id="pickMonth">
            <div class="container">
              <div class="row align-items-center">
                <div class="col-12 align-self-center">
                  <div class="selectMonth">
                    <h5>Aug</h5>
                    <svg height="100" width="100">
                      <circle cx="50" cy="50" r="50" fill="#fff9dc" />
                    </svg>
                  </div>
                </div>
              </div>
              <div class="row align-items-center">
                <div class="col-12 align-self-center">
                  <div class="selectMonth">
                    <h5>SEP 1st</h5>
                    <svg height="100" width="100">
                      <circle cx="50" cy="50" r="50" fill="#fff9dc" />
                    </svg>
                  </div>
                </div>
              </div>
              <div class="row align-items-center">
                <div class="col-12 align-self-center">
                  <div class="selectMonth">
                    <h5>SEP 15th</h5>
                    <svg height="100" width="100">
                      <circle cx="50" cy="50" r="50" fill="#fff9dc" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="monthDetail">
            <div id="board">
              <div id="board-detail">

