<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <% include ../layouts/head %>
    <link rel="stylesheet" href="index/style.css">
    <link rel="stylesheet" href="/css/fullpage.css">
    <script type="text/javascript" src="/js/scrolloverflow.js"></script>
    <script type="text/javascript" src="/js/fullpage.js"></script>
</head>

<body>
    <modal>
        <div class="modal fade" id="newsModal" tabindex="-1" role="dialog" aria-labelledby="newsModalTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ScheduleNewsTitle">
                            <div class="row align-items-center">
                                <div class="col-3 cateIcon">

                                </div>
                                <div class="col-9 cateTitle">

                                </div>
                            </div>
                        </h5>
                        <svg id="closenews" data-dismiss="modal" aria-label="Close" aria-hidden="true" focusable="false"
                            data-prefix="far" data-icon="times-circle" class="svg-inline--fa fa-times-circle fa-w-16"
                            role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                            <path fill="#ec6d4f"
                                d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm0 448c-110.5 0-200-89.5-200-200S145.5 56 256 56s200 89.5 200 200-89.5 200-200 200zm101.8-262.2L295.6 256l62.2 62.2c4.7 4.7 4.7 12.3 0 17l-22.6 22.6c-4.7 4.7-12.3 4.7-17 0L256 295.6l-62.2 62.2c-4.7 4.7-12.3 4.7-17 0l-22.6-22.6c-4.7-4.7-4.7-12.3 0-17l62.2-62.2-62.2-62.2c-4.7-4.7-4.7-12.3 0-17l22.6-22.6c4.7-4.7 12.3-4.7 17 0l62.2 62.2 62.2-62.2c4.7-4.7 12.3-4.7 17 0l22.6 22.6c4.7 4.7 4.7 12.3 0 17z" />
                        </svg>
                    </div>
                    <div class="modal-body " id="newsdetail">

                    </div>
                </div>
            </div>
        </div>
    </modal>
    <% include ../layouts/header%>

    <main>
        <div id="fullpage">
            <div class="section" id="indexPage1">
                <img id="indexLogo" src="/layouts/logo.png">
                <div id="toPage2">
                    <a href="#newsPage">
                        <svg id="triangle" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="caret-down"
                            class="svg-inline--fa fa-caret-down fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 320 512">
                            <path fill="#fff9dc"
                                d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
                        </svg>
                        <svg id="indexOneCircle">
                            <circle fill="#ec6d4f" />
                        </svg>
                    </a>
                </div>
            </div>

            <div class="section" id="indexPage2">
                <div id="secondSection">
                    <div id="news">
                        <img src="/index/jellyfish-tran.png" id="jellyfish">
                        <div id="news-title">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h2 class="card-title">
                                        News
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div id="news-body">
                            <% for(let i in News){ %>
                            <div class="card pernews news-line" data-toggle="modal" data-target="#newsModal"
                                pk="<%= News[i]['pk']%>">
                                <div class="row align-items-center pernews">
                                    <div class="news-img">
                                        <img src="index/icon-<%= icon[News[i]['category']]%>.png"
                                            class="card-img">
                                    </div>
                                    <div class="news-content">
                                        <div class="card-body">
                                            <h5><%= News[i]['title']%></h5>
                                            <span
                                                class="newsTime"><small><%= News[i]['screenTime']%></small></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <img src="index/fishbone-tran.png" id="fishbone">
                        <div class="carousel-inner">
                            <ol class="carousel-indicators">
                                <% for (let i in commercial) { %>
                                <% if(i == 0) { %>
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>" class="active">
                                </li>
                                <% } else { %>
                                <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>"></li>
                                <% } %>
                                <% } %>
                            </ol>
                            <% for (let i in commercial) { %>
                            <% if(i == 0){%>
                            <div class="carousel-item active">
                                <img src="<%= commercial[i]['picPath']%>" class="d-block w-100">
                            </div>
                            <% } else { %>
                            <div class="carousel-item">
                                <img src="<%= commercial[i]['picPath']%>" class="d-block w-100">
                            </div>
                            <% } %>
                            <% } %>

                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true">
                                    <div>
                                        <svg id="prebtn" aria-hidden="true" focusable="false" data-prefix="fas"
                                            data-icon="caret-down" class="svg-inline--fa fa-caret-down fa-w-10"
                                            role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                                            <path fill="#fff9dc"
                                                d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
                                        </svg>
                                        <svg height="40" width="40">
                                            <circle cx="20" cy="20" r="20" fill="#ec6d4f" />
                                        </svg>
                                    </div>
                                </span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true">
                                    <div>
                                        <svg id="nextbtn" aria-hidden="true" focusable="false" data-prefix="fas"
                                            data-icon="caret-down" class="svg-inline--fa fa-caret-down fa-w-10"
                                            role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                                            <path fill="#fff9dc"
                                                d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z" />
                                        </svg>
                                        <svg height="40" width="40">
                                            <circle cx="20" cy="20" r="20" fill="#ec6d4f" />
                                        </svg>
                                    </div>
                                </span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>

            <div class="section" id="indexPage3">
                <div id="indexPage3-frame">
                    <div id="pickMonth">
                        <div class="container1">
                            <div class="selectMonth" id="aug">
                                <svg class="bigSvg">
                                    <circle fill="#fff9dc" class="bigCircle" />
                                    <h5>Aug</h5>
                                </svg>
                            </div>
                            <div class="selectMonth" id="sep1">
                                <svg class="bigSvg">
                                    <circle fill="#fff9dc" class="bigCircle" />
                                    <h5>SEP 1st</h5>
                                </svg>
                            </div>
                            <div class="selectMonth" id="sep15">
                                <svg class="bigSvg">
                                    <circle fill="#fff9dc" class="bigCircle" />
                                    <h5>SEP 15th</h5>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div id="monthDetail">
                        <div id="board">
                            <img id="index3start" src="/index/首頁3_海星去背.png">
                            <div id="board-detail">

                            </div>
                        </div>
                        <a class="prev">&#10094;</a>
                        <a class="next">&#10095;</a>
                        <div id="days">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <% include ../layouts/footer %>
    <% include ../layouts/js %>
    <script type="text/javascript" src="index/index.js"></script>
</body>

</html>