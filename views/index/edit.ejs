<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <% include ../layouts/head %>
    <% include ../layouts/script %>
    <script type="text/javascript" src="/js/ckeditor.js"></script>
    <style>
        .modal {
            z-index: 5010;
        }

        .modal-dialog {
            max-width: 710px;
        }

        .modal-backdrop {
            z-index: 5000;
        }
    </style>
</head>

<body>
    <modal>
        <div class="modal fade" id="ScheduleNewsModal" tabindex="-1" role="dialog" aria-labelledby="ScheduleNewsTitle"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ScheduleNewsTitle">
                            <div class="row align-items-center">
                                <div class="col-3">
                                    <img src="index/icon-課業相關.png" class="card-img">
                                </div>
                                <div class="col-9">
                                    課業相關
                                </div>
                            </div>
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="article-title" style="margin-top: 30px;">
                        <h3 style="text-align: center">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" name="NewsTitle"
                                    placeholder="Insert Title">
                            </div>
                        </h3>
                    </div>
                    <div class="modal-body">
                        <textarea name="NewsBody" id="editor"></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" id="SaveNewsbtn" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </modal>
    <% include ../layouts/header%>
    <main>
        <div class="container" style="max-width: 700px">
            <div id="news">
                <div id="news-title">
                    <div class="card text-center">
                        <div class="card-body">
                            <h2 class="card-title">
                                News
                                <span><button type="button" class="btn btn-light" style="float: right"
                                        data-toggle="modal" data-target="#ScheduleNewsModal">Light</button></span>
                            </h2>
                        </div>
                    </div>
                </div>
                <div id="news-body">
                    <div class="card" data-toggle="modal" data-target="#ScheduleNewsModal">
                        <div class="row align-items-center">
                            <div class="col-sm-3">
                                <img src="index/icon-課業相關.png" class="card-img">
                            </div>
                            <div class="col-sm-9">
                                <div class="card-body">
                                    <h5>card title fjsdlj lsfwop jfojdsl </h5>
                                    <span class="newsTime"><small>3 days ago</small></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <% include ../layouts/js %>
    <script type="text/javascript" src="index/index.js"></script>
    <script>
        $(document).ready(() => {
            var editor;
            $('#ScheduleNewsModal').on('show.bs.modal', function (e) {
                ClassicEditor
                    .create(document.querySelector('#editor'))
                    .then(neweditor => {
                        console.log(neweditor);
                        editor = neweditor;
                    })
                    .catch(error => {
                        console.error(error);
                    });

            })
            $('#ScheduleNewsModal').on('hide.bs.modal', function (e) {
                editor.setData("");
                editor.destroy()
                    .catch(error => {
                        console.log(error);
                    });
            })
            $('#SaveNewsbtn').click(()=>{
                $.ajax({
                    method:'POST',
                    url:'schedule'
                }).
            })

            
        })



    </script>

</body>

</html>