                method: 'get',
                error: function (err) {
                    console.log(err);
                },
                success: function (data) {
                    $("#modify_title").val(data.title);
                    outeditor.setData(data.content);
                    }
            });

                $("#save").click(function(){
                    $("#modify").modal("hide");
                });
            })

        
            //調整modal跳出來的位置
            $('#edit').on('show.bs.modal', function () {
