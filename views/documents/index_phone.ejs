                </div>
            </a>
            
        </div>
      </main>
      <% include ../layouts/js %>
      <% include js %>
      <script>
          $(document).ready(function(){
            var width;
            if(innerWidth > outerWidth)
                width = outerWidth;
            else
                width = innerWidth;
            if(width > 768)
                document.location.href = "/documents/index_com";
            $(window).resize(function(){
                if(innerWidth > outerWidth)
                    width = outerWidth;
                else
                    width = innerWidth;
                if(width > 768)
                    document.location.href = "/documents/index_com";
            });
          })
            
        </script>
  </body>
</html>
