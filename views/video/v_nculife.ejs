<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <% include ../layouts/head %>
    <% include ../layouts/script  %>
    <link rel='stylesheet' href='/video/style.css' />
</head>

<body>
    <% include ../layouts/header %>

    <main>
        <%/* 標題 */%>
        <% include ./title_bar %>

        <%/* 返回按鈕 */%>
        <% if(title_bar[2] == null){ %>
            <a href="/video/">
                <div class="back"><div class="seahorse"><img src="/video/返回按鈕.png"></div></div>
            </a>
        <% }else if(title_bar[4] == null ){ %>
            <a href="/video/<%= back_name %>">
                <div class="back"><div class="seahorse"><img src="/video/返回按鈕.png"></div></div>
            </a>
        <% }else if(title_bar[4] != null){ %>
            <a href="/video/v_interview/<%= back_name %>">
                <div class="back"><div class="seahorse"><img src="/video/返回按鈕.png"></div></div>
            </a>
        <% } %>

        <%/* 食住行育樂縮圖連結 */%>
        <div class="button_area">
            <div class="v_button"><a href="/video/v_nculife/v_eating">食</a></div>
            <div class="v_button"><a href="/video/v_nculife/v_living">住</a></div>
            <div class="v_button"><a href="/video/v_nculife/v_going">行</a></div>
            <div class="v_button"><a href="/video/v_nculife/v_education">育</a></div>
            <div class="v_button"><a href="/video/v_nculife/v_joy">樂</a></div>
        </div>

        <img src="/video/鯨.png" class="whale">

    </main>
</body>
<% include ../layouts/js %>

</html>