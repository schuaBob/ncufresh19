<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/video/style.css' />
    </head>
    <body>
          <%/* 標題 */%>
          <div class="bar_background">

            <%/* 返回按鈕 */%>
            <% if(title_bar[2] == null){ %>
            <a href="/video/">
                <img src="/video/箭頭.png" class="back">
            </a>
            <% }else if(title_bar[4] == null ){ %>
            <a href="/video/<%= back_name %>">
                <img src="/video/箭頭.png" class="back">
            </a>
            <% }else if(title_bar[4] != null){ %>
            <a href="/video/<%= back_name %>">
                <img src="/video/箭頭.png" class="back">
            </a>
            <% } %>

            <div class="title_bar">

                <%/* 黃線mark */%>
                <div class="line"></div>

                <a href="/video/">
                    <div class="title">
                        VIDEO<div class="small_title">影音專區</div>
                    </div>
                </a>

                <%/* 影片_學長姊 */%>
                <% if(title_bar[4] != null){ %>
                    <%/* 三角形*/%>
                    <div class="tri"></div>

                    <a href="../">
                        <div class="title">
                            <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
                        </div>
                    </a>

                    <div class="tri"></div>

                    <a href="../../../<%= back_name %>">
                        <div class="title">
                            <%= title_bar[2] %><div class="small_title"><%= title_bar[3] %></div>
                        </div>
                    </a>

                    <div class="tri"></div>

                    <div class="title">
                        <font color="#ec6d4f"><%= title_bar[4] %></font><div class="small_title"><%= title_bar[5] %></div>
                    </div>

                <% }else if(title_bar[2] != null && title_bar[4] == null){ %>
                    <div class="tri"></div>

                    <%/* 影片_中大生活 */%>
                    <% if(title_bar[0] === 'LIFE'){ %>
                        <a href="../nculife/">
                            <div class="title">
                                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
                            </div>
                        </a>

                        <div class="tri"></div>

                        <div class="title">
                            <font color="#ec6d4f"><%= title_bar[2] %></font><div class="small_title"><%= title_bar[3] %></div>
                        </div>

                    <%/* 影片_中大傳說 */%>
                    <% }else if(title_bar[0] === 'LEGEND'){ %>
                        <a href="../legend/">
                            <div class="title">
                                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
                            </div>
                        </a>

                        <div class="tri"></div>

                        <div class="title">
                            <font color="#ec6d4f"><%= title_bar[2] %></font><div class="small_title"><%= title_bar[3] %></div>
                        </div>
                    <%/* 學院分頁_學長姐訪談 */%>
                    <% }else if(title_bar[0] === 'INTERVIEW'){ %>
                        <a href="../">
                            <div class="title">
                                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
                            </div>
                        </a>

                        <div class="tri"></div>

                        <div class="title">
                            <font color="#ec6d4f"><%= title_bar[2] %></font><div class="small_title"><%= title_bar[3] %></div>
                        </div>
                    <% } %>
                <% }else if(title_bar[2] == null){ %>
                    <div class="tri"></div>

                    <div class="title">
                        <font color="#ec6d4f"><%= title_bar[0] %></font><div class="small_title"><%= title_bar[1] %></div>
                    </div>
                <% } %>
            </div>
          </div>
    </body>
</html>