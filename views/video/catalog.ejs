                    <a href="ls" class="button">
                        <img src="/video/button/生科系.png" class="img_button">
                    </a>
                    <a href="dbse" class="button">
                        <img src="/video/button/生醫系.png" class="img_button">
                    </a>
                <% }else if(title_bar[3] === '地球科學學院'){ %>
