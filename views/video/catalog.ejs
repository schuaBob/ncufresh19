                    <a href="hakka" class="button">
                        <img src="/video/button/客家系.png" class="img_button">
                    </a>
                <% }else if(title_bar[3] === '理學院'){ %>
                    <a href="jspcos" class="button">
                        <img src="/video/button/理學院學士班.png" class="img_button">
                    </a>
                    <a href="phy" class="button">
                        <img src="/video/button/物理系.png" class="img_button">
                    </a>
                    <a href="math" class="button">
                        <img src="/video/button/數學系.png" class="img_button">
                    </a>
                    <a href="chem" class="button">
                        <img src="/video/button/化學系.png" class="img_button">
                    </a>
                    <a href="dop" class="button">
                        <img src="/video/button/光電系.png" class="img_button">
                    </a>
                <% }else if(title_bar[3] === '資訊電機學院'){ %>
                    <a href="ipeecs" class="button">
