                    <a href="joy" class="button">
                        <img src="/video/button/中大生活_樂.png" class="img_button">
                    </a>
                </div>
            <% }else if(title_bar[0] === 'INTERVIEW'){ %>
                <%/* 各學院縮圖連結 */%>
                <div class="button_area">
                    <a href="engineering/" class="button">
