<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ../../layouts/head %>
    <% include ../../layouts/script  %>
    <link rel='stylesheet' href='/video/style.css' />
  </head>
  <body>
    
    <% include ../../layouts/header %>
    <main>

        <%/* 藍色區域 */%>
        <div class="background">
          <div class="video_area">
            <img src="/video/鯨_phone.png" class="whale">
          </div>
        </div>


      <%/* 標題 */%>
        <div class="title_bar">
          <%/* 黃線mark */%>
          <div class="line"></div>
          <div class="title">
            VIDEO<div class="small_title">影音專區</div>
          </div>
        </div>

      <%/* 縮圖連結 */%>
        <div class="button_area">
          <a href="nculife/">
            <img src="/video/中大生活.jpg" class="v_button">
          </a>
          <a href="interview/">
            <img src="/video/學長姐訪談.jpg" class="v_button">
          </a>
          <a href="legend/">
            <img src="/video/中大傳說.jpg" class="v_button">
          </a>
        </div>

        <script>
            //大於768變電腦
            var orignURL = location.pathname;
            var newURL = orignURL.replace(/index_smp/g, 'index_com');

            //alert(newURL);

            $(document).ready(function(){
                var width;
                if(innerWidth > outerWidth)
                    width = outerWidth;
                else
                    width = innerWidth;
                if(width > 768)
                    document.location.href = newURL;
            $(window).resize(function(){
                    if(innerWidth > outerWidth)
                        width = outerWidth;
                    else
                        width = innerWidth;
                    if(width > 768)
                        document.location.href = newURL;
                });
            });
          
            /*
            $(document).ready(function(){
                $(window).resize(function(){
                    var width = innerWidth;
                    if(width > 768)
                        document.location.href = "/video/index_com/";
                });
            });
            */
        </script>

      
    </main>

  </body>
  <% include ../../layouts/js %>
</html>