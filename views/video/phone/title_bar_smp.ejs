<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/video/style.css' />
    </head>
    <body>
          
        <%/* 標題 */%>
      <div class="bar_background">
        <div class="title_bar">
          <%/* 黃線mark */%>
          <div class="line"></div>

          <%/* 影片用_學長姊學院 */%>
          <% if(title_bar[4] != null){ %>
            <div class="title">
                <%= title_bar[2] %><div class="small_title"><%= title_bar[3] %></div>
            </div>

          <%/* 影片用_中大生活 */%>  
          <% }else if(title_bar[0] === 'LIFE'){ %>
            <div class="title">
                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
            </div>

          <%/* 影片用_中大傳說 */%>  
          <% }else if(title_bar[0] === 'LEGEND'){ %>
            <div class="title">
                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
            </div>

          <%/* 分頁用_學長姊 */%>  
          <% }else if(title_bar[0] === 'INTERVIEW'){ %>
            <div class="title">
                <%= title_bar[0] %><div class="small_title"><%= title_bar[1] %></div>
            </div>
          <% } %>

        </div>
      </div>


    </body>
</html>