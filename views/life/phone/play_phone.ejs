<!DOCTYPE html>
<html>
    <head>
        <title>新生知訊網｜中大生活</title>
        <% include ../../layouts/head %>
        <% include ../../layouts/script %>
        <link rel=stylesheet type="text/css" href="../life/life_phone.css">
    </head>
    
    <body>
        <% include ../../layouts/header %>
        <% include ../../layouts/js %>
        <% include ../js %>
        <div class="back"><img class="backToMain" src="backToMain.png"></div>
        <div class="mainTitle">
            <span id="nculife">NCULife</span>
            <span id="life">中大生活</span>
        </div>
        <main id="main">
            <!--content-->
            <div class="content">
                <% for(let i in data) { %>
                    <div class="pictureArea">
                        <div class="pic">
                            <img class="picture" src="<%= data[i]['picture'] %>">
                        </div>
                    <div class="textArea">
                        <div class="contentMainTitle">
                            <%- data[i]['mainTitle'] %>
                        </div>
                        <div class="contentSubTitle">
                            <%- data[i]['subTitle'] %>
                        </div>
                        <div class="text">
                            <%- data[i]['content'] %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </main>
        <script>
                $(document).ready(function(){
                    $(window).resize(function(){
                        var width = innerWidth;
                        if(width > 1024)
                            document.location.href = "/life/play";
                    });
                });
            </script>
    </body>
</html>