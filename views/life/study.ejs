                <li><a href="/life/live"> <img class="navSubBtn" src="naviBefore3.png"> </a></li>
            </ul>
        </div>
        <!-- <div class="mainTitle">
            <div class="titleText">
                <p>STUDY</p>
                <p>學習之路</p>
            </div>
        </div> -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contentModal" style="position: absolute; z-index: 1;">新增/修改內容</button>
        <main id="main">   
        <!--content-->
        <div class="content">
            <div class="studyPicture">
                <div>
                    <a href="/life/study/lit"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/science"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/ec"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/mgt"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/ceecs"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/escollege"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/hakka"> <img class="studyImg" src="live2.png"></a>
                </div>
                <div>
                    <a href="/life/study/chst"> <img class="studyImg" src="live2.png"></a>
                </div>
            </div>
        </div>
            <!--Modal-->
                <div class="modal fade" id="contentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel">新增內容</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true"> &times;</span>
                                </button> 
                            </div>
                            <div class="modal-body">
                                <form action="addPlayContent" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">請輸入要修改的學院</label>
                                        <div class="col-md-16">
                                            <textarea class="form-control input-md" name="modifyMainTitle" id="editor2"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">學院名稱</label>
                                        <div class="col-md-16">
                                            <textarea class="form-control input-md" name="mainTitle" id="editor1"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">人名</label>
                                        <div class="col-md-16">
                                            <textarea class="form-control input-md" name="name" id="editor1"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">子標題</label>
                                        <div class="col-md-16">
                                            <textarea class="form-control input-md" name="subTitle" id="editor2"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">敘述文字</label>
                                        <div class="col-md-16">
                                            <textarea class="form-control input-md" name="content" id="editor3"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="elecategory">圖片</label>
                                        <div class="col-md-12">
                                            <input type="file" class="form-control input-md" name="picture">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">儲存/修改</button>
                                    </div>
                                </form>
                            </div>
                        </div> <!--/.modal-content-->
                    </div> <!--/.modal -->
                </div>
        </main>
        <% include ../layouts/js %>
        <% include js %>
    </body>
    
</html>