<!DOCTYPE html>
<html>
    <head>
        <title>Play</title>
        <% include ../layouts/head %>
        <% include ../layouts/script %>
        <link rel=stylesheet type="text/css" href="life.css">
    </head>
    
    <body>
        <% include ../layouts/header %>
        <% if(user && user.role === 'admin') { %>
            <botton type="button" class="btn btn-primary" data-toggle="modal" data-target="#contentModal" style="position: absolute; z-index: 1;">新增/修改內容</botton>
        <% } %>
        <div class="sideNav" id="navi">
                <ul>
                    <li><a href="/life/study"> <img class="navSubBtn" src="naviBefore0.png"> </a></li>
                    <li><a href="/life/food"> <img class="navSubBtn" src="naviBefore1.png"> </a></li>
                    <li><a href="/life/play"> <img class="navSubBtn" src="naviAfter2.png"> </a></li>
                    <li><a href="/life/live"> <img class="navSubBtn" src="naviBefore3.png"> </a></li>
                </ul>
            </div>
            <div class="mainTitle">
                    <div class="titleText">
                        <h2>PLAY</h2>
                        <h3>哪裡好玩</h3>
                    </div>
                </div>
        <main id="main">
            <!--content-->
            <div class="content">
                <div class="pictureArea">
                    <div>
                    <img class="picture" src="playT.png">
                    </div>
                    <div>
                    <img class="picture" src="playT.png">
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contentModal" style="position: absolute; z-index: 1;">新增/修改內容</button>
            <!--Modal-->
            <div class="modal fade" id="contentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel">新增圖片</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"> &times;</span>
                            </button> 
                        </div>
                        <div class="modal-body">
                            <form action="addLiveContent" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="elecategory">圖片</label>
                                    <div class="col-md-12">
                                        <input type="file" class="form-control input-md" name="picture">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">新增</button>
                                </div>
                            </form>
                        </div>
                        <div class="modal-header">
                            <h4 class="modal-title" id="exampleModalLabel">新增內容</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form action="addLiveContent" method="POST">
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="elecategory">主要標題</label>
                                    <div class="col-md-16">
                                    <textarea class="form-control input-md" name="mainTitle" id="disc"></textarea>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="elecategory">子標題</label>
                                    <div class="col-md-16">
                                    <textarea class="form-control input-md" name="subTitle" id="disc"></textarea>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="elecategory">敘述文字</label>
                                    <div class="col-md-16">
                                    <textarea class="form-control input-md" name="content" id="disc"></textarea>
                                </div>
                                <button type="button" class="btn btn-primary" id="refresh">Refresh</button>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">儲存/修改</button>
                                </div>
                            </form>
                        </div>
                    </div> <!--/.modal-content-->
                </div> <!--/.modal -->
            </div>
        </main>
        <% include ../layouts/js %>
        <% include js %>
    </body>
</html>