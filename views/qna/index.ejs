    <style>
      .seaBlueBg{
        background-color: #0D4966;
      }
      .yellowBg{
        background-color:#FFCC00;
      }
      .grayBg{
        background-color:#D0CECE;
      }
      

      body{
        overflow: hidden;
      }
      .navBar{
        top:0px;
        left:0px;
        width:100%;
        position: absolute;
        height: 60px;
        
        line-height: 60px;
        color: white;
      }
      .leftSide{
        top:300px;
        left:0px;
        position: absolute;
        width: 500px;
        bottom: 0px;
        background-color: rgb(102, 252, 164);
      }
      /* "分類"圖片 */
      .pic_classification{
        background-color:orange;
        width: 100%;
        height: 120px;
      }
      .rightSide{
        top:300px;
        left:500px;
        position: absolute;
        right:0px;
        bottom: 0px;
        background-color:rgb(67, 238, 238);
      }
      /* 過濾器以及搜尋框 */
      .filter_SearchBar{
        background-color: bisque;
        width:100%;
        padding: 10px 80px;
      }
      .content{  
        overflow-x: hidden;      
        overflow-y: scroll;
        margin: 20px 60px;
        height: 80%;
      }

      tr{
        border-bottom: 1px solid #0D4966 ;
      }
      .head{
        border-bottom:1px dashed #0D4966;
      }
      .filterButton{
        border-radius: 2px;
        padding: 2px 10px;
      }
      .searchBar{
        min-width: 187px;
        float: right;
      }
      .form-control{
        border-radius:30px;
      }
      
    </style>
  </head>
  <body>      
      <nav class="navBar seaBlueBg">navBar</nav>
      <div class="leftSide">
        <div class="pic_classification">
          QA的分類圖片
        </div>
        <div>
          放選項
        </div>
      </div>
      <div class="rightSide">
        <!-- 過濾以及搜尋框 -->
        <div class="filter_SearchBar">
          <div class="buttonGroup d-inline-flex">
            <div class="filterButton text-white seaBlueBg">排序</div>
            <div class="filterButton yellowBg">時間</div>
            <div class="filterButton grayBg">人氣</div>
          </div>
          <div class="searchBar">
            <form class="form-inline">
              <i class="fas fa-search" aria-hidden="true"></i>
              <input class="form-control form-control-sm ml-2" type="text" placeholder="Search"
                aria-label="Search">
            </form>
          </div>
        </div>
        <div class="content">
            <div class="contentTable">
                <table class="table table-hover table-borderless">
                    <thead>
                      <tr class="head">
                        <th scope="col">分類</th>
                        <th scope="col">日期</th>
                        <th scope="col">標題</th>
                        <th scope="col">點閱率</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
