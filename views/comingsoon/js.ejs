<p id = "demo"></p>

<script>
    // 上線日期和時間
    var Dday = new Date("Aug 7, 2019 00:00:00").getTime();

    // 每1秒更新計時器
    var x = setInterval(function() {

        // 現在時間
        var now = new Date().getTime();
        // 上線時間和現在時間的距離
        var distance = Dday - now;
        // 天, 時, 分, 秒計算
        var days = Math.floor(distance / (1000*60*60*24));
        var hours = Math.floor((distance % (1000*60*60*24)) / (1000*60*60));
        var mins = Math.floor((distance % (1000*60*60)) / (1000*60));
        var secs = Math.floor((distance % (1000*60)) / 1000);
        // 補0
        if(days<10) {
            days = "0" + days;
        }
        if(hours<10) {
            hours = "0" + hours;
        }
        if(mins<10) {
            mins = "0" + mins;
        }
        if(secs<10) {
            secs = "0" + secs;
        }

        // 顯示
        document.getElementById("demo").innerHTML = days + " day " + hours + " hour " + mins + " min " + secs + " sec ";
    },1000);
</script>